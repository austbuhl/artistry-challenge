<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @artist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :Instrument %>
        <%= f.fields_for :instruments, @artist.instruments.build do |instr| %>
        <%= instr.text_field :name %>
    <% end %>

    <%# f.label :Instrument %>
    <%# f.collection_select :instruments, Instrument.all, :id, :name %>

    <div><%= f.label :Instrument_Selection %>
    <%= f.collection_check_boxes :instrument_ids, Instrument.all, :id, :name %></div>

    <%= f.submit %>
<% end %>